def fix_auto_test_case(x):
    # Collapse spaces until comma found, replacing any / or - with _
    ret = ''
    remove_spaces = True
    for l in x.group(0):
        if l == ',':
            remove_spaces = False
        if remove_spaces:
            if l == ' ':
                continue;
            if l == '/' or l == '-':
                l = '_'
        ret += l
    ret += '\n'
    return ret

